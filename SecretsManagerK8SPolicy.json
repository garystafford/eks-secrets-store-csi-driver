{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "secretsmanager:GetSecretValue",
                "secretsmanager:DescribeSecret",
                "ssm:GetParameters"
            ],
            "Resource": [
                "arn:aws:secretsmanager:us-east-1:<your_accound_id>:secret:MySecret",
                "arn:aws:ssm:us-east-1:<your_accound_id>:parameter/MyParamater"
            ]
        }
    ]
}
